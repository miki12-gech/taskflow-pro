// 1. THIS CONFIG WAS MISSING
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. NEW PRIORITY SETTING
enum Priority {
  LOW
  MEDIUM
  HIGH
}

// 3. MODELS
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?  // <--- ADD THIS (Optional for now)
  password  String
  createdAt DateTime @default(now())
  tasks     Task[]
}
model Task {
  id        String   @id @default(uuid())
  title     String
  isDone    Boolean  @default(false)
  priority  Priority @default(LOW)
  dueDate   DateTime? // <--- ADD THIS (Question mark = Optional)
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}